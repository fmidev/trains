    locale-gen
ENV LANG en_US.UTF-8
ENV LANGUAGE en_US:en
ENV LC_ALL en_US.UTF-8
# RUN dpkg-reconfigure locales

ADD bin /a/bin
ADD cnf /a/cnf

RUN chmod 777 /a
RUN mkdir /board && chmod 777 /board

ENV GOOGLE_APPLICATION_CREDENTIALS=/a/cnf/TRAINS-65c1b150fed0.json

